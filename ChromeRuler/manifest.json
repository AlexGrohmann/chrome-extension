{
  "name": "Ruler",
  "description": "Position a ruler on the webpage to measure elements in pixels",
  "version": "1.1",
  "manifest_version": 2,
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "extension.png",
      "38": "extension.png"
    },
    "default_title": "Ruler",
    "name": "Chrome Ruler"
  }
}
